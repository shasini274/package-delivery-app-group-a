<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.manager.vendor.VendorProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/vendor_profile_name"
            style="@style/ProfileStyle" />

        <TextView
            android:id="@+id/vendor_profile_address"
            style="@style/ProfileStyle" />

        <TextView
            android:id="@+id/vendor_profile_email"
            style="@style/ProfileStyle" />

        <TextView
            android:id="@+id/vendor_profile_person"
            style="@style/ProfileStyle" />

        <TextView
            android:id="@+id/vendor_profile_number"
            style="@style/ProfileStyle" />

        <EditText
            android:id="@+id/vendor_profile_name_edit"
            android:visibility="gone"
            style="@style/ProfileStyle"
            android:imeOptions="actionDone"/>
        <EditText
            android:id="@+id/vendor_profile_address_edit"
            android:visibility="gone"
            style="@style/ProfileStyle"
            android:imeOptions="actionDone"/>
        <EditText
            android:id="@+id/vendor_profile_email_edit"
            android:visibility="gone"
            style="@style/ProfileStyle"
            android:imeOptions="actionDone"/>
        <EditText
            android:id="@+id/vendor_profile_person_edit"
            android:visibility="gone"
            style="@style/ProfileStyle"
            android:imeOptions="actionDone"/>
        <EditText
            android:id="@+id/vendor_profile_number_edit"
            android:visibility="gone"
            style="@style/ProfileStyle"
            android:imeOptions="actionDone"
            android:inputType="number" />

        <Button
            android:id="@+id/btn_vendor_profile_edit"
            android:layout_width="200dp"
            android:layout_height="51dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="48dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="48dp"
            android:layout_marginBottom="64dp"
            android:enabled="true"
            android:text="Edit"
            android:textColor="#FFFFFF"
            app:backgroundTint="#009688" />

        <Button
            android:id="@+id/btn_vendor_profile_update"
            android:layout_width="200dp"
            android:layout_height="51dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="48dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="48dp"
            android:layout_marginBottom="64dp"
            android:visibility="gone"
            android:enabled="true"
            android:text="Update"
            android:textColor="#FFFFFF"
            app:backgroundTint="#009688" />


    </LinearLayout>
</FrameLayout>